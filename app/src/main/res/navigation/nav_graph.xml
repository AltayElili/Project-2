<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.project_2.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/menuHome" />
        <action
            android:id="@+id/action_loginFragment_to_menuHome"
            app:destination="@id/menuHome" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuHome"
        android:name="com.example.project_2.ui.ProductFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_product" >
        <action
            android:id="@+id/action_menuHome_to_menuFavories"
            app:destination="@id/menuFavories" />
        <action
            android:id="@+id/action_menuHome_to_productIdFragment"
            app:destination="@id/productIdFragment" />
        <action
            android:id="@+id/action_menuHome_to_addProductFragment"
            app:destination="@id/addProductFragment" />
        <action
            android:id="@+id/action_menuHome_to_menuProfile"
            app:destination="@id/menuProfile" />
    </fragment>
    <fragment
        android:id="@+id/menuFavories"
        android:name="com.example.project_2.ui.WishListFragment"
        android:label="fragment_wish_list"
        tools:layout="@layout/fragment_wish_list" >
        <action
            android:id="@+id/action_menuFavories_to_menuProfile"
            app:destination="@id/menuProfile" />
    </fragment>
    <fragment
        android:id="@+id/menuProfile"
        android:name="com.example.project_2.ui.CustomerFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_customer" >
        <action
            android:id="@+id/action_menuProfile_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/productIdFragment"
        android:name="com.example.project_2.ui.ProductIdFragment"
        android:label="fragment_product_id"
        tools:layout="@layout/fragment_product_id" >
    </fragment>
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.example.project_2.ui.AddProductFragment"
        android:label="fragment_add_product"
        tools:layout="@layout/fragment_add_product" >
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.project_2.ui.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_verifyCodeFragment"
            app:destination="@id/verifyCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyCodeFragment"
        android:name="com.example.project_2.ui.VerifyCodeFragment"
        android:label="fragment_verify_code"
        tools:layout="@layout/fragment_verify_code" >
        <action
            android:id="@+id/action_verifyCodeFragment_to_menuHome"
            app:destination="@id/menuHome" />
    </fragment>
</navigation>

